<Page x:Class="jellybins.Fluent.Views.McModificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:jellybins.Fluent.ViewModels"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="McModificationPage" Height="Auto" Width="Auto">
    <Page.DataContext>
        <local:McModificationPageViewModel/>
    </Page.DataContext>
    <Grid>
        <ui:Card
            VerticalAlignment="Top">
            <ui:Card.Content>
                <StackPanel>
                    <TextBlock 
                        Text="{Binding Properties.Name}"
                        FontSize="30"
                        VerticalAlignment="Center"/>
                    <TextBlock
                        Text="{Binding Properties.Path}"
                        VerticalAlignment="Top"/>
                    <ui:Card
                        VerticalAlignment="Top"
                        Margin="10">
                        <ui:Card.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                    <!-- Building CommonProperties Table -->
                                    <StackPanel>
                                        <TextBlock 
                                            FontSize="21"
                                            />
                                        <TextBlock 
                                            Text="ID"/>
                                        <TextBlock
                                            Text="Version"/>
                                        <TextBlock
                                            Text="Description"/>
                                        <TextBlock
                                            Text="License"/>
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="1">
                                        <TextBlock 
                                            Text="Loader"
                                            FontSize="21"/>
                                        <TextBlock
                                            Text="{Binding Properties.LoaderId}"/>
                                        <TextBlock
                                            Text="{Binding Properties.LoaderVersion}"/>
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="2">
                                        <TextBlock 
                                            Text="Mod Metadata"
                                            FontSize="21"/>
                                        <TextBlock
                                            Text="{Binding Properties.ModId}"/>
                                        <TextBlock
                                            Text="{Binding Properties.ModVersion}"/>
                                        <TextBlock
                                            TextWrapping="Wrap"
                                            Text="{Binding Properties.ModDescription}"/>
                                        <TextBlock
                                            Text="{Binding Properties.ModLicense}"/>
                                    </StackPanel>
                                </Grid>
                            </ui:Card.Content>
                        </ui:Card>
                    <ui:VirtualizingGridView
                        Margin="0,10,0,10"
                        StretchItems="True"
                        FontFamily="Consolas"
                        FontSize="16"
                        ItemsSource="{Binding Properties.ModDependencies}">
                        <ui:VirtualizingGridView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} ({1})">
                                            <Binding Path="Key"/>
                                            <Binding Path="Value"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </DataTemplate>
                        </ui:VirtualizingGridView.ItemTemplate>
                    </ui:VirtualizingGridView>
                    <!-- Manifest View | Loader ML View -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <ui:CardExpander
                            Grid.Row="0"
                            Header="Java Manifest">
                            <ui:CardExpander.Content>
                                <StackPanel>
                                    <TextBlock 
                                        TextWrapping="WrapWithOverflow">
                                        <Run
                                            FontFamily="Consolas"
                                            Text="MANIFEST.MF"/>
                                        <Run Text="contains Java metadata for compiling and packing application into archive"/>
                                        <LineBreak/>
                                    </TextBlock>
                                    <ui:TextBox
                                        IsReadOnly="True"
                                        TextWrapping="Wrap"
                                        AcceptsReturn="True"
                                        VerticalScrollBarVisibility="Visible"
                                        Text="{Binding ManifestText}"
                                        FontFamily="Consolas"
                                        FontSize="16"/>
                                </StackPanel>
                            </ui:CardExpander.Content>
                        </ui:CardExpander>
                        <ui:CardExpander
                            Grid.Row="1"
                            Header="Loader Manifest">
                            <StackPanel>
                                <TextBlock
                                    TextWrapping="WrapWithOverflow">
                                    <Run Text="Loader manifest (depends on mod-loader) stores"/>
                                    <Run Text="information about entry point, external/internal resources"/>
                                    <Run Text="recommended versions of Java Minecraft and loader version other important values."/>
                                    <LineBreak/>
                                </TextBlock>
                                <TextBox
                                    MaxHeight="400"
                                    FontSize="16"
                                    FontFamily="Consolas"
                                    Text="{Binding LoaderText}"
                                    TextWrapping="WrapWithOverflow"
                                    IsReadOnly="True"
                                    AcceptsReturn="True"
                                    VerticalScrollBarVisibility="Visible">
                                </TextBox>
                            </StackPanel>
                        </ui:CardExpander>
                    </Grid>
                </StackPanel>
            </ui:Card.Content>
        </ui:Card>
    </Grid>
</Page>
