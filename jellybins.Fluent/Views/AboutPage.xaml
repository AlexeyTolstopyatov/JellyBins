<Page x:Class="jellybins.Fluent.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:jellybins.Fluent.ViewModels"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="AboutPage" Height="Auto" Width="Auto">
    <Page.DataContext>
        <local:AboutPageViewModel/>
    </Page.DataContext>
    <Grid>
        <ui:Card>
            <ui:Card.Content>
                <Grid>
                    <!-- Build description -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/> 
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock
                        FontSize="31"
                        TextWrapping="WrapWithOverflow"
                        Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock
                        Grid.Row="1"
                        Margin="0,0,0,20"
                        TextWrapping="WrapWithOverflow"
                        FontSize="21">
                        <Run Text="General information page"/>
                        <LineBreak/>
                    </TextBlock>
                    
                    <ui:Card
                        Grid.Row="2">
                        <ui:Card.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="0.5*"/>
                                </Grid.RowDefinitions>
                                <TextBlock
                                    FontSize="16"
                                    TextWrapping="WrapWithOverflow">
                                    <Run Text="{Binding ProductDescription, UpdateSourceTrigger=PropertyChanged}"/>
                                    <LineBreak/>
                                </TextBlock>
                                <ui:Card
                                    Grid.Row="1">
                                    <ui:Card.Content>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                FontFamily="Consolas">
                                                <Run Text="jellybins.Core"/>
                                                <LineBreak/>
                                                <Run Text="jellybins.Java"/>
                                                <LineBreak/>
                                                <Run Text="jellybins.Console"/>
                                                <LineBreak/>
                                                <Run Text="jellybins.Fluent"/>
                                                <LineBreak/>
                                                <LineBreak/>
                                                <Run Text="CLR Installed"></Run>
                                            </TextBlock>
                                            <TextBlock
                                                Grid.Column="1"
                                                FontFamily="Consolas">
                                                <Run Text="{Binding ProductCoreVersion}"/>
                                                <LineBreak/>
                                                <Run Text="{Binding ProductJavaVersion}"/>
                                                <LineBreak/>
                                                <Run Text="{Binding ProductConsoleVersion}"/>
                                                <LineBreak/>
                                                <Run Text="{Binding ProductVersion}"/>
                                                <LineBreak/>
                                                <LineBreak/>
                                                <Run Text="{Binding CommonRuntimeVersion}"></Run>
                                            </TextBlock>
                                        </Grid>
                                    </ui:Card.Content>
                                </ui:Card>
                            </Grid>
                        </ui:Card.Content>
                    </ui:Card>
                </Grid>
            </ui:Card.Content>
        </ui:Card>
    </Grid>
</Page>
