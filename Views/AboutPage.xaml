<Page x:Class="jellybins.Views.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:jellybins.Views"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="About" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <ui:Card 
            Grid.Row="1" 
            Grid.Column="1"
            Padding="30">
            <ui:TextBlock
                TextWrapping="Wrap">
                <Run
                    FontSize="30"
                    Text="Jelly Bins"/>
                <LineBreak/>
                <LineBreak/>
                <Run Text="Узнайте побольше о том, что не можете запустить! Создайте отчет о основных свойствах двоичного файла!"/>
            </ui:TextBlock>
        </ui:Card>
        
        <ui:Card 
            Grid.Row="1"
            Grid.Column="2">
            <ui:ListView>
                <TextBlock Text="PE"/>
                <TextBlock Text="LX"/>
                <TextBlock Text="LE"/>
                <TextBlock Text="NE"/>
            </ui:ListView>
        </ui:Card>
    </Grid>
</Page>
