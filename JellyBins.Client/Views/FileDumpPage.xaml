<Page x:Class="JellyBins.Client.Views.FileDumpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:JellyBins.Client.ViewModels"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="FileDumpPage" 
      Height="Auto" Width="Auto">
    <Page.DataContext>
        <local:FileDumpPageViewModel/>
    </Page.DataContext>
    <Grid
        VerticalAlignment="Top"
        HorizontalAlignment="Left">
        <ScrollViewer>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition 
                        Width="*" 
                        MinWidth="350"/>
                    <ColumnDefinition 
                        Width="3*" 
                        MinWidth="700"/>
                </Grid.ColumnDefinitions>
                <!--Application Structure -->
                <ScrollViewer>
                    <ItemsControl 
                        ItemsSource="{Binding Model.Headers}" 
                        Margin="10, 0, 10, 10">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander
                                    IsExpanded="True"
                                    FontWeight="Medium"
                                    Header="{Binding TableName}">
                                    <ItemsControl 
                                        ItemsSource="{Binding Rows}" 
                                        Margin="0,8,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Margin="0,0,0,1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="250"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock 
                                                        Grid.Column="0" 
                                                        ToolTip="{Binding ItemArray[0]}"
                                                        Text="{Binding ItemArray[0]}" 
                                                        Padding="8,6" FontWeight="SemiBold"/>
                                                    <TextBox 
                                                        Grid.Column="1" 
                                                        Text="{Binding ItemArray[1]}" 
                                                        ToolTip="{Binding ItemArray[1]}"
                                                        IsReadOnly="True" 
                                                        BorderThickness="0"
                                                        Padding="8,6" 
                                                        Background="Transparent"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Vertical"
                    Grid.Column="1">
                    <!--DUMP CONTAINER -->
                    <ui:Card>
                        <ui:Card.Content>
                            <StackPanel>
                                <TextBlock
                                    Text="File Sections"
                                    FontWeight="Medium"
                                    FontSize="21"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ItemsControl
                                        ItemsSource="{Binding Model.Sections}" 
                                        Margin="16">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid>
                                                    <ui:CardExpander
                                                        Header="{Binding TableName}"
                                                        Icon="{ui:SymbolIcon Bookmark24}"
                                                        Margin="0,0,0,10">
                                                        <Grid>
                                                            <DataGrid
                                                                FontSize="16"
                                                                FontFamily="Consolas"
                                                                ItemsSource="{Binding}"/>
                                                        </Grid>
                                                    </ui:CardExpander>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </StackPanel>
                        </ui:Card.Content>
                    </ui:Card>
                    <ui:Card>
                        <ui:Card.Content>
                            <StackPanel>
                                <TextBlock
                                    Text="Export Names"
                                    FontWeight="Medium"
                                    FontSize="21"/>
                                <ItemsControl
                                    ItemsSource="{Binding Model.Exports}" 
                                    Margin="16">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <ui:CardExpander
                                                    Grid.Row="1"
                                                    Icon="{ui:SymbolIcon ArrowExportLtr24}"
                                                    Header="{Binding TableName}"
                                                    Margin="0,0,0,10">
                                                    <Grid>
                                                        <DataGrid
                                                            FontSize="16"
                                                            FontFamily="Consolas"
                                                            ItemsSource="{Binding}"/>
                                                    </Grid>
                                                </ui:CardExpander>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ui:Card.Content>
                    </ui:Card>
                    <ui:Card>
                        <ui:Card.Content>
                            <StackPanel>
                                <TextBlock
                                    Text="Import Names"
                                    FontWeight="Medium"
                                    FontSize="21"/>
                                <ItemsControl
                                    ItemsSource="{Binding Model.Imports}" 
                                    Margin="16">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <ui:CardExpander
                                                    Icon="{ui:SymbolIcon ArrowImport24}"
                                                    Header="{Binding TableName}"
                                                    Grid.Row="1"
                                                    Margin="0,0,0,10">
                                                    <Grid>
                                                        <DataGrid
                                                            FontSize="16"
                                                            FontFamily="Consolas"
                                                            ItemsSource="{Binding}"/>
                                                    </Grid>
                                                </ui:CardExpander>
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ui:Card.Content>
                    </ui:Card>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
