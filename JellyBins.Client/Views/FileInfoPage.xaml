<Page x:Class="JellyBins.Client.Views.FileInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:JellyBins.Client.ViewModels"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="FileInfoPage" 
      Height="Auto" Width="Auto">
    <Page.DataContext>
        <local:FileInfoPageViewModel/>
    </Page.DataContext>
    <Grid>
        <ui:Card>
            <ui:Card.Content>
                <StackPanel>
                    <TextBlock
                        TextWrapping="WrapWithOverflow"
                        FontSize="21"
                        Text="{Binding Model.Name}"
                        Margin="10"/>
                    <TextBlock
                        TextWrapping="WrapWithOverflow"
                        Margin="10"
                        Text="{Binding Model.Path}"/>
                    <ui:Card>
                        <ui:Card.Content>
                            <StackPanel>
                                <TextBlock 
                                    FontSize="21"
                                    Text="Required Machine Characteristics"/>
                                <Grid
                                    Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel
                                        Grid.Column="0">
                                        <TextBlock Text="{Binding Model.CpuArchitecture}"/>
                                        <TextBlock Text="{Binding Model.OsName}"/>
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="1">
                                        <TextBlock Text="{Binding Model.CpuMaxWord}"/>
                                        <TextBlock Text="{Binding Model.OsVersion}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </ui:Card.Content>
                    </ui:Card>
                    <ItemsControl
                        ItemsSource="{Binding Model.InfoDictionary}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="{Binding Key}"/>
                                    <Label Grid.Column="1" Content="{Binding Value}"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ui:Card.Content>
        </ui:Card>
    </Grid>
</Page>
