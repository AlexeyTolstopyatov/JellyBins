<Page x:Class="JellyBins.Client.Views.FileInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:JellyBins.Client.ViewModels"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      Title="FileInfoPage" 
      Height="Auto" Width="Auto">
    <Page.DataContext>
        <local:FileInfoPageViewModel/>
    </Page.DataContext>
    <WrapPanel
        Orientation="Horizontal">
        <ui:Card
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <ui:Card.Content>
                <StackPanel>
                    <TextBlock
                        TextWrapping="WrapWithOverflow"
                        FontSize="21"
                        Text="{Binding Model.Name}"
                        Margin="10,10,10,0"/>
                    <TextBlock
                        TextWrapping="WrapWithOverflow"
                        Margin="10, 5, 10, 5"
                        Text="{Binding Model.Path}"/>
                    <ui:Card>
                        <ui:Card.Content>
                            <StackPanel>
                                <TextBlock 
                                    FontSize="21"
                                    Text="Required Machine Characteristics"/>
                                <Grid
                                    Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel
                                        Grid.Column="0">
                                        <TextBlock Text="{Binding Model.CpuArchitecture}"/>
                                        <TextBlock Text="{Binding Model.OsName}"/>
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Column="1">
                                        <TextBlock Text="{Binding Model.CpuMaxWord}"/>
                                        <TextBlock Text="{Binding Model.OsVersion}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </ui:Card.Content>
                    </ui:Card>
                    <TextBlock
                        MaxWidth="622"
                        Margin="10,5,10,5"
                        Text="Those information takes from main Program Header and describes names of flags."
                        TextWrapping="WrapWithOverflow"/>
                    <ui:VirtualizingGridView
                        SpacingMode="BetweenItemsOnly"
                        StretchItems="True"
                        Margin="10,10,10,0"
                        MaxWidth="622"
                        ItemsSource="{Binding Model.Characteristics}">
                        <ui:VirtualizingGridView.ItemTemplate>
                            <DataTemplate>
                                <ui:TextBlock
                                    ToolTip="{Binding}"
                                    FontFamily="Consolas"
                                    Margin="5"
                                    Text="{Binding}">
                                    
                                </ui:TextBlock>
                            </DataTemplate>
                        </ui:VirtualizingGridView.ItemTemplate>
                    </ui:VirtualizingGridView>
                </StackPanel>
            </ui:Card.Content>
        </ui:Card>
        <ui:Card
            VerticalAlignment="Top"
            HorizontalAlignment="Left">
            <ui:Card.Content>
                <StackPanel>
                    <TextBlock
                        Margin="10,0,10,10"
                        Text="Optional Fields"
                        FontSize="21"/>
                    <TextBlock
                        MaxWidth="300"
                        Margin="10, 0, 10, 10"
                        TextWrapping="Wrap"
                        Text="Depends on binary format, some fields of this group may not contain expected information."/>
                    <ui:Card
                        Width="300">
                        <ui:Card.Content>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Date of creation"/>
                                    <TextBlock Text="Minimum OS version"/>
                                    <TextBlock Text="Description"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock 
                                        TextWrapping="Wrap"
                                        Text="{Binding Model.DateStamp}"/>
                                    <TextBlock 
                                        TextWrapping="Wrap"
                                        Text="{Binding Model.MinimumOsVersion}"/>
                                    <TextBlock
                                        Text="{Binding Model.Title}"
                                        TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </ui:Card.Content>
                    </ui:Card>
                </StackPanel>
            </ui:Card.Content>
        </ui:Card>
        <ui:Card
            VerticalAlignment="Top"
            HorizontalAlignment="Left">
            <ui:Card.Content>
                <StackPanel>
                    <TextBlock
                        Margin="10,0,10,5"
                        Text="Suggested external Toolchain"
                        FontSize="21"/>
                    <TextBlock
                        Margin="10,0,10,10"
                        TextWrapping="WrapWithOverflow"
                        MaxWidth="300"
                        Text="Those information takes from user's Dictionary. All found module names comapres with registered (saved in *.json file) categories"/>
                    <TextBlock
                        MaxWidth="300"
                        Margin="10,5,10,5"
                        TextWrapping="Wrap"
                        Text="This block is optional. If dictionaries not exists in Application's directory, this block will be empty"/>
                    <ui:VirtualizingGridView
                        MaxWidth="300"
                        StretchItems="True"
                        IsSynchronizedWithCurrentItem="True"
                        SpacingMode="Uniform"
                        ItemsSource="{Binding Model.ExternToolChain}">
                        <ui:VirtualizingGridView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock 
                                    FontFamily="Consolas"
                                    Margin="5"
                                    TextWrapping="Wrap"
                                    Text="{Binding}"/>
                            </DataTemplate>
                        </ui:VirtualizingGridView.ItemTemplate>
                    </ui:VirtualizingGridView>
                </StackPanel>
            </ui:Card.Content>
        </ui:Card>
    </WrapPanel>
</Page>
